{
    "name": "mkfont",
    "longName": "mkfont",
    "shortName": "mkfont",
    "description": "Makes font.",
    "homepage": "https://github.com/Nebukam/mkfont",
    "app": {
        "display": "standalone",
        "orientation": "portrait",
        "colorTheme": "#1e1e1e",
        "theme": "default"
    },
    "extension": {
        "manifest_version": 2,
        "popup": {
            "width": 800,
            "height": 600
        },
        "display": "standalone",
        "permissions": [
            "storage"
        ],
        "hostPermissions": [
            "%homepage%"
        ]
    },
    "fileAssociations": [
        {
            "ext": "mkfont",
            "name": "MKFONT File",
            "role": "Editor"
        }
    ],
    "builds": [
        {
            "enabled": true,
            "platform": "windows",
            "arch": "x64",
            "asar": true,
            "build": {
                "target": "nsis",
                "nsis": {
                    "oneClick": false,
                    "perMachine": false,
                    "allowToChangeInstallationDirectory": true
                }
            }
        },
        {
            "enabled": false,
            "platform": "mac",
            "arch": "x64",
            "asar": true,
            "build": {
                "target": "deb",
                "mac": {
                    "target": "zip"
                }
            }
        },
        {
            "enabled": false,
            "platform": "linux",
            "arch": "x64",
            "asar": true
        }
    ]
}